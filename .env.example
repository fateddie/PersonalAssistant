# AskSharon.ai Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Email Integration (Phase 1 - stubbed)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_EMAIL=your_email@example.com
IMAP_PASSWORD=your_app_specific_password

# Optional: Notification Settings
NOTIFICATION_LEVEL=INFO  # INFO, WARNING, ERROR, CRITICAL

# Optional: Development Settings
DEBUG=False
LOG_LEVEL=INFO
